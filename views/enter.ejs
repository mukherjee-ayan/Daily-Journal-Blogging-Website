<%- include('partials/header', {isAuthentcated: headerType}) %>

<div class="container mt-5">
  <h1><%= pageName %></h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to the desired route -->
          <% if (pageName === "Register") { %>
            <form action="/register" method="POST">
              <div class="form-group">
                <label for="name">Name</label>
                <input type="name" class="form-control" name="name">
              </div>
          <% } else if (pageName === "Login") { %>
            <form action="/login" method="POST">
          <% } %>
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="username">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn submit-btn"><strong><%= pageName %></strong></button>
          </form>

          <% if (pageName === "Login") { %>
            <p class="register-prompt">Don't have an account? <a href="/register"><strong>Sign Up</strong></a></p>
          <% } %>


        </div>
      </div>
    </div>

    <!-- <div class="col-sm-4">
      <div class="card">
        <div class="card-body">
          <a class="btn btn-block btn-social btn-google" href="/auth/google" role="button">
            <i class="fab fa-google"></i>
            Sign In with Google
          </a>
        </div>
      </div>
    </div> -->

  </div>
</div>

<%- include('partials/footer') %>
