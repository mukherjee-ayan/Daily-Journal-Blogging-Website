<%- include("partials/header", {isAuthentcated: headerType}) %>

  <h1>Home</h1>
  <p><%= startingContent %></p>

  <% posts.forEach(function(post){ %>
    <h1><%= post.title %></h1>
    <h4>By <%= post.author %></h4>
    <p>
      <%= post.content.substring(0,100) + " ..."%>
      <a href="/posts/<%= post.userId %>/<%= post.blogId %>">Read More</a>
    </p>
  <% }); %>

<%- include("partials/footer") %>
