<%- include("partials/header", {isAuthenticated: headerType}) %>

<h1><%= user.name %></h1>

<% user.blogs.slice().reverse().forEach(function(post){ %>

<div class="">

  <h2><%= post.title %></h2>

  <h5><%= post.dateOfCreation %></h5>

  <p>
    <%= post.content.substring(0,250) + " ..."%>
    <a href="/posts/<%= user._id %>/<%= post.title %>">Read More</a>
  </p>

  <a href="/delete/<%= post._id %>" class="btn btn-primary" role="button">Delete</a>

</div>

<% }); %>

<%- include("partials/footer") %>
