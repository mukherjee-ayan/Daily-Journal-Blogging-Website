<%- include("partials/header", {isAuthenticated: headerType}) %>

<h1>Compose</h1>

<form action="/compose" method="post">

  <div class="form-group">

    <label>Title</label>
    <input class="form-control" type="text" name="postTitle">
    <label>Post</label>
    <textarea class="form-control" name="postBody" rows="5" cols="30"></textarea>

  </div>

  <button type="submit" class="btn btn-primary margin-right" name="button">Publish</button>
  <a href="/" class="btn btn-primary" role="button">Cancel</a>

</form>

<%- include("partials/footer") %>
